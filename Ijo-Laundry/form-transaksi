    public void ubah(){
        JDateChooser jd = new JDateChooser();
        String tampilan = "yyyy-MM-dd";
        SimpleDateFormat fm = new SimpleDateFormat(tampilan);
        String tanggal = String.valueOf(fm.format(JD_tanggalMasuk.getDate()));
    }
    
    private void id_transaksi_otomatis(){
        try {
            java.sql.Connection conn = new Konfigurasi().getConnection();
            java.sql.Statement stm = conn.createStatement();
            java.sql.ResultSet rs = stm.executeQuery("select*from tb_transaksi order by ID_transaksi desc");
            
            if(rs.next()){
                String kode = rs.getString("ID_transaksi").substring(1);
                String AN = ""+(Integer.parseInt(kode)+1);
                String Nol ="";
                
                if(AN.length()==1){
                    Nol="00";
                } else if(AN.length()==2){
                    Nol="0";
                } else if(AN.length()==3){
                    Nol="";
                }
                tf_transaksi.setText("T"+Nol+AN);
            } else{
                tf_transaksi.setText("T001");
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, e);
        }
    }
    
    private void kosongkan_form(){
        
        tf_Idpelanggan.setText(null);
        tf_namaPelanggan.setText(null);
        tf_Nohp.setText(null);
        JC_JenisKelamin.setSelectedItem(this);
        tf_alamat.setText(null);
        JD_tanggalMasuk.setDate(null);
        JC_jenisLaundry.setSelectedItem(this);
        tf_harga.setText(null);
        tf_beratPakaian.setText(null);
        tf_Totalpembayaran.setText(null);
       JC_status.setSelectedItem(this);
    }
    public void tampilkan_data_pelanggan(){
        DefaultTableModel model = new DefaultTableModel();
        model.addColumn("no");
        model.addColumn("ID Pelanggan");
        model.addColumn("Nama Pelanggan");
        model.addColumn("No.Hp/Telp");
        model.addColumn("Jenis Kelamin");
        model.addColumn("Alamat");
        
        String cari = tf_carii.getText();
        try {
            int no = 1;
            String sql = "SELECT * FROM tb_pelanggan WHERE nama_pelanggan LIKE'%"+cari+"%'";
            java.sql.Connection conn = new Konfigurasi().getConnection();
            java.sql.Statement stm = conn.createStatement();
            java.sql.ResultSet rs = stm.executeQuery(sql);
            
            while (rs.next()){
                model.addRow(new Object[] {no++,rs.getString(1),rs.getString(2),rs.getString(3),rs.getString(4),rs.getString(5)});
            }
            tabel_pelanggan.setModel(model);
            
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, e.getMessage());
        }
        
    }
    
    public void tampilkan_data_transaksi(){
         DefaultTableModel model = new DefaultTableModel();
        model.addColumn("No");
        model.addColumn("ID Transaksi");
        model.addColumn("ID Pelanggan");
        model.addColumn("Nama Pelanggan");
        model.addColumn("No.Hp/Telp");
        model.addColumn("Jenis Kelamin");
        model.addColumn("Alamat");
        model.addColumn("Tanggal Masuk");
        model.addColumn("Jenis Laundry");
        model.addColumn("Harga");
        model.addColumn("Berat Pakaian");
        model.addColumn("Total Pembayaran");
        model.addColumn("Status");
        
        String cari = tf_cari.getText();
        try {
            int no = 1;
            String sql = "SELECT * FROM tb_transaksi WHERE nama_pelanggan LIKE'%"+cari+"%'";
            java.sql.Connection conn = new Konfigurasi().getConnection();
            java.sql.Statement stm = conn.createStatement();
            java.sql.ResultSet rs = stm.executeQuery(sql);
            
            while (rs.next()){
                 model.addRow(new Object[] {no++,rs.getString(1),rs.getString(2),rs.getString(3),rs.getString(4),rs.getString(5),rs.getString(6),rs.getString(7),rs.getString(8),rs.getString(9),rs.getString(10),rs.getString(11),rs.getString(12)});
            }
            tabel_transaksi.setModel(model);
        }  catch (SQLException e) {
            JOptionPane.showMessageDialog(this, e.getMessage());
        }
    }

       
        
    public static Date getTanggalFromTable(JTable table,int kolom){
        JTable tabel = table;
        String str_tgl = String.valueOf(tabel.getValueAt(tabel.getSelectedRow(), kolom));
        Date tanggall = null;
        try {
            
            tanggall = new SimpleDateFormat("yyyy-MM-dd").parse(str_tgl);
            
        } catch(ParseException ex){
         java.util.logging.Logger.getLogger(Form_AmbilCucian.class.getName()).log(java.util.logging.Level.SEVERE, null, ex);
        }
        return tanggall;
    }

