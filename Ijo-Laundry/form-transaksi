    private void tf_cariKeyReleased(java.awt.event.KeyEvent evt) {                                    
        // TODO add your handling code here:
        tampilkan_data_transaksi();
        tampilkan_data_pelanggan();
    }                                   

    private void JC_jenisLaundryActionPerformed(java.awt.event.ActionEvent evt) {                                                
        // TODO add your handling code here:
        if(JC_jenisLaundry.getSelectedItem().toString().equalsIgnoreCase("cuci kering reguler 2 hari")){
            tf_harga.setText("4000");
        } else if (JC_jenisLaundry.getSelectedItem().toString().equalsIgnoreCase("cuci kering express 1 hari")){
            tf_harga.setText("5000");
        } else if (JC_jenisLaundry.getSelectedItem().toString().equalsIgnoreCase("cuci basah reguler 2 hari")){
            tf_harga.setText("3000");
        } else if (JC_jenisLaundry.getSelectedItem().toString().equalsIgnoreCase("cuci basah express 1 hari")){
            tf_harga.setText("4000");
        } else if(JC_jenisLaundry.getSelectedItem().toString().equalsIgnoreCase("cuci kering dan setrika reguler 2 hari")){
            tf_harga.setText("6000");
        } else if (JC_jenisLaundry.getSelectedItem().toString().equalsIgnoreCase("cuci kering dan setrika express 1 hari")){
            tf_harga.setText("8000");
        } 
    }                                               
    
    private void tf_beratPakaianKeyReleased(java.awt.event.KeyEvent evt) {                                            
        // TODO add your handling code here:
        int harga = Integer.parseInt(tf_harga.getText());
        int berat = Integer.parseInt(tf_beratPakaian.getText());
        int totalbayar = harga * berat;
        String total = Integer.toString(totalbayar);
        tf_Totalpembayaran.setText(total);
        
        
    }                                           

