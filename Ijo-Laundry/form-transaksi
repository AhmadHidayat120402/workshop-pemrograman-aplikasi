    private void btn_simpanActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        String tampilan = "yyyy-MM-dd";
        SimpleDateFormat fm = new SimpleDateFormat(tampilan);
        String tanggal = String.valueOf(fm.format(JD_tanggalMasuk.getDate()));
        
        try {
            String sql = "INSERT INTO tb_transaksi VALUES ('" + tf_transaksi.getText()+"','"+tf_Idpelanggan.getText()+"','"+tf_namaPelanggan.getText()+"','"+tf_Nohp.getText()+"','"+(String)JC_JenisKelamin.getSelectedItem()+"','"+tf_alamat.getText()+"','"+tanggal+"','"+(String)JC_jenisLaundry.getSelectedItem()+"','"+tf_harga.getText()+"','"+tf_beratPakaian.getText()+"','"+tf_Totalpembayaran.getText()+"','"+(String)JC_status.getSelectedItem()+"')";           
            java.sql.Connection conn = new Konfigurasi().getConnection();
            java.sql.PreparedStatement pstm = conn.prepareStatement(sql);
            pstm.execute();
            
            JOptionPane.showMessageDialog(null, "berhasil simpan data");
            
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, e.getMessage());
        }
        
        tampilkan_data_transaksi();
        id_transaksi_otomatis();
        kosongkan_form();
    }                                          

    private void btn_editActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try {
            String sql = "UPDATE tb_transaksi SET ID_transaksi= '"+ tf_transaksi.getText()+"',ID_Pelanggan = '"+ tf_Idpelanggan.getText()+"',nama_pelanggan ='"+ tf_namaPelanggan.getText()+"',no_hp ='"+ tf_Nohp.getText()+"',jenis_kelamin ='"+ (String)JC_JenisKelamin.getSelectedItem()+"',alamat ='"+ tf_alamat.getText()+"',Tanggal_Masuk='"+ JD_tanggalMasuk.getDate()+"',Jenis_Laundry='"+(String)JC_jenisLaundry.getSelectedItem()+"',Harga='"+tf_harga.getText()+"',Berat_Pakaian='"+tf_beratPakaian.getText()+"',Total_Pembayaran='"+tf_Totalpembayaran.getText()+"',status='"+(String)JC_status.getSelectedItem()+"' WHERE ID_transaksi = '" +tf_transaksi.getText()+"'";
            java.sql.Connection conn = new Konfigurasi().getConnection();
            java.sql.PreparedStatement pstm = conn.prepareStatement(sql);
            pstm.execute();
            
            JOptionPane.showMessageDialog(null, "berhasil edit data");
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, e.getMessage());
        }
        tampilkan_data_transaksi();
        id_transaksi_otomatis();
        kosongkan_form();
       
    }                                        

    private void btn_batalActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        kosongkan_form();
        id_transaksi_otomatis();
        tf_transaksi.requestFocus();
        
    }                                         

    private void btn_hapusActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        try {
            String sql = "DELETE FROM tb_transaksi WHERE ID_transaksi = '"+ tf_transaksi.getText()+"'";
            java.sql.Connection conn = new Konfigurasi().getConnection();
            java.sql.PreparedStatement pstm = conn.prepareStatement(sql);
            pstm.execute();
            
            JOptionPane.showMessageDialog(null, "Yakin Record Data di hapus ? ");
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, e.getMessage());
        }
        tampilkan_data_transaksi();
        id_transaksi_otomatis();
        kosongkan_form();
    }                                         

    private void tabel_transaksiMouseClicked(java.awt.event.MouseEvent evt) {                                             
        // TODO add your handling code here:
          int baris = tabel_transaksi.rowAtPoint(evt.getPoint());

        String ID_transaksi = tabel_transaksi.getValueAt(baris, 1).toString();
        tf_transaksi.setText(ID_transaksi);
        
        String ID_Pelanggan = tabel_transaksi.getValueAt(baris, 2).toString();
        tf_Idpelanggan.setText(ID_Pelanggan);
        
        String nama_pelanggan = tabel_transaksi.getValueAt(baris, 3).toString();
        tf_namaPelanggan.setText(nama_pelanggan);
        
        String no_hp = tabel_transaksi.getValueAt(baris, 4).toString();
        tf_Nohp.setText(no_hp);
        
        String jenis_kelamin = tabel_transaksi.getValueAt(baris, 5).toString();
        JC_JenisKelamin.setSelectedItem(jenis_kelamin);
        
        String alamat = tabel_transaksi.getValueAt(baris, 6).toString();
        tf_alamat.setText(alamat);
        
        JD_tanggalMasuk.setDate(getTanggalFromTable(tabel_transaksi, 7));
       
       String Jenis_Laundry = tabel_transaksi.getValueAt(baris, 8).toString();
       JC_jenisLaundry.setSelectedItem(Jenis_Laundry);
       
       String Harga = tabel_transaksi.getValueAt(baris, 9).toString();
       tf_harga.setText(Harga);
       
       String Berat_Pakaian = tabel_transaksi.getValueAt(baris,10).toString();
       tf_beratPakaian.setText(Berat_Pakaian);
       
       String Total_Pembayaran = tabel_transaksi.getValueAt(baris, 11).toString();
       tf_Totalpembayaran.setText(Total_Pembayaran);
       
       String status = tabel_transaksi.getValueAt(baris, 12).toString();
       JC_status.setSelectedItem(status);
    }                                            

