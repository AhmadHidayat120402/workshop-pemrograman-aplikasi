    public static void main(String args[]) {
        Form_login f = new Form_login();
        Splash_screen s = new Splash_screen();
        s.setVisible(true);
        
        
        
          
        try {
                 for(int i = 0; i<=100; i++) 
                 {
                Thread.sleep(50);
                s.timer.setText(Integer.toString(i)+"%");
                s.ProgressBar.setValue(i);
                if (i == 100)
                {
                    s.setVisible(false);
                    f.setVisible(true);
                }  }
            } catch (Exception E) {
                
            } 
        
    
    
