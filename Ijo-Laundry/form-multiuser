    private void tabel_userMouseClicked(java.awt.event.MouseEvent evt) {                                        
        // TODO add your handling code here:
         int baris = tabel_user.rowAtPoint(evt.getPoint());
         
         String username = tabel_user.getValueAt(baris, 1).toString();
         tf_username.setText(username);
         
         String password = tabel_user.getValueAt(baris, 2).toString();
         tf_password.setText(password);
         
         String nama_lengkap = tabel_user.getValueAt(baris, 3).toString();
         tf_namalengkap.setText(nama_lengkap);
         
         String level = tabel_user.getValueAt(baris, 4).toString();
         tf_level.setText(level);
         
    }                                       

    private void btn_tambahActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        kosongkan_form();
        tf_username.requestFocus();
    }                                          

    private void btn_simpanActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
         try {
            String sql = "INSERT INTO tb_multiuser VALUES ('" + tf_username.getText()+"','"+tf_password.getText()+"','"+tf_namalengkap.getText()+"','"+tf_level.getText()+"')";
            java.sql.Connection conn = new Konfigurasi().getConnection();
            java.sql.PreparedStatement pstm = conn.prepareStatement(sql);
            pstm.execute();

            JOptionPane.showMessageDialog(null, "berhasil simpan data");
            tampilkan_data();
            kosongkan_form();
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, e.getMessage());
        }
    }                                          

    private void btn_editActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
         try {
            String sql = "UPDATE tb_multiuser SET username = '"+tf_username.getText()+"',password = '"+ tf_password.getText()+"',nama_lengkap = '" + tf_namalengkap.getText()+"',level = '"+tf_level.getText()+"' WHERE username = '" + tf_username.getText()+"'";
            java.sql.Connection conn = new Konfigurasi().getConnection();
            java.sql.PreparedStatement pstm = conn.prepareStatement(sql);
            pstm.execute();

            JOptionPane.showMessageDialog(null, "berhasil edit data");

        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, e.getMessage());
        }
                     tampilkan_data();
            kosongkan_form();
        
    }                                        

    private void btn_batalActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        kosongkan_form();
        tf_username.requestFocus();
    }                                         

    private void btn_hapusActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
         try {
            String sql = "DELETE FROM tb_multiuser WHERE username = '"+ tf_username.getText()+"'";
            java.sql.Connection conn = new Konfigurasi().getConnection();
            java.sql.PreparedStatement pstm = conn.prepareStatement(sql);
            pstm.execute();

           JOptionPane.showMessageDialog(null, "berhasil hapus data");
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, e.getMessage());
        }
        tampilkan_data();
        kosongkan_form();
    }                                         

    private void tf_cariKeyReleased(java.awt.event.KeyEvent evt) {                                    
        // TODO add your handling code here:
        tampilkan_data();
    }                                   

    private void btn_kembaliActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        {
    new Form_owner().setVisible(true);
    dispose();
    }
    }                                           

