    private void btnLoginActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String name = txtuser.getText();
        String password = txtpass.getText();
        String level = cbuser.getSelectedItem().toString();
        
        if(name.equals("")||password.equals("")|| level.equals("Select")){
            JOptionPane.showMessageDialog(rootPane, "tolong isi field yang kosong","ERROR",1);
            
        } else{
            try {
                java.sql.Connection con = new Konfigurasi().getConnection();
                java.sql.PreparedStatement pst = con.prepareStatement("Select * from tb_multiuser where username=? and password=?");
                pst.setString(1, name);
                pst.setString(2, password);
                rs = pst.executeQuery();
                
                if(rs.next()){
                    String sl = rs.getString("level");
                    if(level.equalsIgnoreCase("owner")&& sl.equalsIgnoreCase("owner")){
                        Form_owner ad = new Form_owner(name);
                        ad.setVisible(true);
                        setVisible(false);
                        
                    }
                    
                    if(level.equalsIgnoreCase("kasir")&& sl.equalsIgnoreCase("kasir")){
                        Home Ho = new Home(name);
                        Ho.setVisible(true);
                        setVisible(false);
                    
                    }
                     if(level.equalsIgnoreCase("pelayan")&& sl.equalsIgnoreCase("pelayan")){
                        Form_transaksi fm = new Form_transaksi(name);
                        fm.setVisible(true);
                        setVisible(false);
                     }
                } else{
                    
                }
                
            } catch (Exception ex) {
                System.out.println("" + ex);
            }
        }
      
   /* if (txtuser.getText().equals("owner")&&
    String.valueOf(txtpass.getPassword()).equals("123")){
    new Home().setVisible(true);
    dispose();
    
            
    } else if(txtuser.getText().equals("kasir")&&
      String.valueOf(txtpass.getPassword()).equals("345")){
        new Home().setVisible(true);
      dispose();
      {
      
    }
        
    } else if(txtuser.getText().equals("pelayan")&&
            String.valueOf(txtpass.getPassword()).equals("567")){
            new Home().setVisible(true);
            dispose();{
        
    }
            
            } else {
            JOptionPane.showMessageDialog(null, txtuser.getText()+" password anda salah","Pesan Kesalahan",JOptionPane.ERROR_MESSAGE);
            txtuser.setText("");
            txtpass.setText("");
            txtuser.requestFocus();
        }*/
    }                                        

    
   
