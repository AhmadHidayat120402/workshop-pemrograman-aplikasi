    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        if (usernameTextField.getText().equals("admin")&&
                String.valueOf(passwordField.getPassword()).equals("admin")){
            new Form_Utama().setVisible(true);
            dispose();
    } else {
            JOptionPane.showMessageDialog(null, usernameTextField.getText()+" password anda salah","Pesan Kesalahan",JOptionPane.ERROR_MESSAGE);
            usernameTextField.setText("");
            passwordField.setText("");
            usernameTextField.requestFocus();
        }
        
    }                                        

